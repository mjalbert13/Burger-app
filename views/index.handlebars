<style>
  #menu {
    background: wheat;
    border: 3px solid grey;
  }

  #eaten {
    background: lightblue;
    border:  3px solid gray;
  }

  #update  {
    background: lightgreen;
    border: 3px solid gray;
  }

</style>

<div class="row">

<div class="col-md-5 col-md-offset-1" id="menu">
    <h2 class="burgers-to-eat">Burger Menu</h2>
    <ul class="uneaten">
        {{#each burgers}}
            {{#unless this.devoured}}
                <li>
                    <p id="menu-burger">
                        {{this.burger_name}}
                    </p>
                    <form action="burgers/update/{{this.id}}" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit" class="btn btn-primary" id="devour-burger">Devour!</button>
                    </form>
                </li>
            {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="col-md-5 col-md-offset-1" id="eaten">
      <h2 class="eaten-title">Eaten Burgers</h2>
      <ul class="burgers-eaten">
        {{#each burgers}}
          {{#if devoured}}
            <li>
              <p id="eaten-burgers">
                {{this.burger_name}}
              </p>
            </li>
            <form action="burgers/update/{{this.id}}" method="PUT">
             <input type="hidden" name="devoured" value="false">
          {{/if}}
        {{/each}}
      </ul>
    </div>
</div>


<div class="row">
  <div class="col-md-2"></div>
    <div class="col-md-4" id="update">
      <br><br><br>
        <form class="create-form" action="burgers/create" method="POST">
          <h2 class="add-title">Add a Burger!</h2>
          <div class="form-group">
            <label for="newBurger">Burger Name:</label>
            <input type="hidden" name="devoured" value="0">
            <input type="text" id="newBurger" name="burger_name">
          <button type="submit" class="btn btn-secondary create-form" >Add Burger</button>
        </form>
      </div>
    </div>

</div>


